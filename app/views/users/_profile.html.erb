<div class="container">
  <%= form_for @user,:html => {:class => "form-horizontal"} do |f| %>
      <fieldset>
        <!-- Form Name -->
        <legend>Profile Details</legend>
        <!-- Text input-->
        <div class="form-group">
          <label class="col-sm-2 control-label" for="textinput">Name</label>
          <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-sm-2 control-label" for="textinput">Email</label>
          <div class="col-sm-10">
            <%= f.text_field :email, class: 'form-control' %>
          </div>
        </div>
        <!-- Text input-->
        <div class="form-group">
          <label class="col-sm-2 control-label" for="textinput">Address</label>
          <div class="col-sm-10">
            <%= f.text_field :address, class: 'form-control' %>
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-sm-2 control-label" for="textinput">Phone</label>
          <div class="col-sm-4">
            <%= f.text_field :phone, class: 'form-control' %>
          </div>
        </div>
        <% if current_user && current_user.id.to_i == params[:id].to_i %>
        <!-- Text input-->
        <div class="form-group">
          <label class="col-sm-2 control-label" for="textinput">Image</label>
          <div class="col-sm-4">
            <%= f.file_field :image, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-2"></div>
          <div class="col-sm-4"><input type="submit" class="btn btn-default"></div>
        </div>
        <% end %>
      </fieldset>

    <% end %>
  </div><!-- /.col-lg-12 -->